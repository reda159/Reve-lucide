<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.revelucide">
    
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/lucid_dream"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StatistiqueActivity"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".ObjectifActivity"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".RappelActivity"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".AjoutActivity"
            android:windowSoftInputMode="adjustPan"></activity>
    </application>

</manifest>