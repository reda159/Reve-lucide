<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.revelucide"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="26"
        android:targetSdkVersion="30" />

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@drawable/lucid_dream"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.MaterialComponents" >
        <activity android:name="com.example.revelucide.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.revelucide.StatistiqueActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.example.revelucide.RechercheActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.example.revelucide.RappelActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.example.revelucide.AjoutActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>